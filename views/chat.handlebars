<div id="main-container" class="">

  <h1>Chat Page</h1>

  <section>
    {{!-- Create post --}}
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Write your new post here: </label>
        <input type="text" id="post-text" name="post_text" />
        <button id="post-post-btn" type="submit" class="btn btn-info btn-lg">Post</button>
  <br>
  <br>
      </div>
    </form>
  </section>


  {{!-- add if loggedin ? --}}
  <ol class="post-list">
  {{#each posts as |post|}}
    <li>


  <article class="post">
        <div class="text">
          <p>{{post_text}}</p>
        </div>
        <div class="meta">
          By {{staff.first_name}} {{staff.last_name}} on
          {{format_date created_at}} | {{comments.length}} {{format_plural "comment" comments.length}} 
          | {{liked_count}} {{format_plural "like" liked_count}}
        </div>

        <a href="/single-post/{{post.id}}">See full post</a>

  </article>

    </li>
    <br>
    {{/each}}
  </ol>
