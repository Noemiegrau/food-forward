    <article class="post">
      <div class="text">
        <p>{{posts.post_text}}</p>
      </div>
      <div id="post-name-single" class="meta">
        By <span id="post-name">{{posts.staff.first_name}} {{posts.staff.last_name}} </span> on
        {{format_date posts.created_at}} | {{posts.comments.length}} {{format_plural "comment" posts.comments.length}} 
