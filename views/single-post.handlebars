    <div id="create-comment">
            <form class="comment-form">
              <div>
                <h5 id="title-create-comment">Comment On This Post </h5>
                <label for="post-title">Write your comment here: </label>
                <input name="comment-body"></input>
                <button id="post-comment-btn" type="submit" class="btn btn-info btn-lg">Add Comment to Post</button>
                <button id="btn-like" type="button" class="btn uplike-btn">Like Post</button>
              </div>
            </form>
    </div>
  <br>

{{!-- Comment section --}}
<div class="comments">
  {{#each posts.comments as |comment|}}
  <li>
  <section class="comment">
        <div class="text">
      {{comment_text}}
    </div>
    <div id="comment-info" class="meta">
     By <span id="post-name">{{staff.first_name}} {{staff.last_name}} </span> on {{format_date created_at}}
    </div>
  </section>
  </li>
    <br>
  {{/each}}
</div>
